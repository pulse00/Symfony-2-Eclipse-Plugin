 <extension
       point="org.eclipse.ui.handlers">
    <handler
          class="com.dubture.symfony.ui.actions.InsertRouteHandler"
          commandId="com.dubture.symfony.ui.command.insertRoute">
    </handler>
    <handler
          class="com.dubture.symfony.ui.actions.InsertServiceHandler"
          commandId="com.dubture.symfony.ui.command.insertService">
    </handler>
    <handler
          class="com.dubture.symfony.ui.actions.InsertParameterHandler"
          commandId="com.dubture.symfony.ui.command.insertParameter">
    </handler>
 </extension>
 <extension
       point="org.eclipse.ui.menus">
    <menuContribution
          allPopups="false"
          locationURI="menu:sourceMenuId?before=sourceBegin">
       <command
             commandId="com.dubture.symfony.ui.command.insertRoute"
             label="Insert Symfony route"
             style="push">
          <visibleWhen
                checkEnabled="false">
             <with
                   variable="selection">
                <iterate
                      ifEmpty="false"
                      operator="and">
                   <test
                         forcePluginActivation="true"
                         property="org.pdtextensions.parentProjectNature"
                         value="com.dubture.symfony.core.symfonyNature">
                   </test>
                </iterate>
             </with>
          </visibleWhen>
       </command>
       <command
             commandId="com.dubture.symfony.ui.command.insertService"
             label="Insert Symfony service ID"
             style="push">
          <visibleWhen
                checkEnabled="false">
             <with
                   variable="selection">
                <iterate
                      ifEmpty="false"
                      operator="and">
                   <test
                         forcePluginActivation="true"
                         property="org.pdtextensions.parentProjectNature"
                         value="com.dubture.symfony.core.symfonyNature">
                   </test>
                </iterate>
             </with>
          </visibleWhen>
       </command>
       <command
             commandId="com.dubture.symfony.ui.command.insertParameter"
             label="Insert Symfony container parameter"
             style="push">
          <visibleWhen
                checkEnabled="false">
             <with
                   variable="selection">
                <iterate
                      ifEmpty="false"
                      operator="and">
                   <test
                         forcePluginActivation="true"
                         property="org.pdtextensions.parentProjectNature"
                         value="com.dubture.symfony.core.symfonyNature">
                   </test>
                </iterate>
             </with>
          </visibleWhen>
       </command>
    </menuContribution>
    <menuContribution
          allPopups="false"
          locationURI="popup:sourcePopupMenuId?after=sourceBegin">
       <command
             commandId="com.dubture.symfony.ui.command.insertRoute"
             label="Insert Symfony route"
             style="push">
          <visibleWhen
                checkEnabled="false">
             <with
                   variable="selection">
                <iterate
                      ifEmpty="false"
                      operator="and">
                   <test
                         forcePluginActivation="true"
                         property="org.pdtextensions.parentProjectNature"
                         value="com.dubture.symfony.core.symfonyNature">
                   </test>
                </iterate>
             </with>
          </visibleWhen>
       </command>
       <command
             commandId="com.dubture.symfony.ui.command.insertService"
             label="Insert Symfony service ID"
             style="push">
          <visibleWhen
                checkEnabled="false">
             <with
                   variable="selection">
                <iterate
                      ifEmpty="false"
                      operator="and">
                   <test
                         forcePluginActivation="true"
                         property="org.pdtextensions.parentProjectNature"
                         value="com.dubture.symfony.core.symfonyNature">
                   </test>
                </iterate>
             </with>
          </visibleWhen>
       </command>
       <command
             commandId="com.dubture.symfony.ui.command.insertParameter"
             label="Insert Symfony container parameter"
             style="push">
          <visibleWhen
                checkEnabled="false">
             <with
                   variable="selection">
                <iterate
                      ifEmpty="false"
                      operator="and">
                   <test
                         forcePluginActivation="true"
                         property="org.pdtextensions.parentProjectNature"
                         value="com.dubture.symfony.core.symfonyNature">
                   </test>
                </iterate>
             </with>
          </visibleWhen>
       </command>
    </menuContribution>
    <menuContribution
          allPopups="false"
          locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
       <command
             commandId="com.dubture.symfony.ui.command.addSymfonySupport"
             label="Add Symfony support"
             style="push">
          <visibleWhen
                checkEnabled="false">
             <and>
                <with
                      variable="selection">
                   <iterate
                         ifEmpty="false"
                         operator="and">
                      <test
                            forcePluginActivation="true"
                            property="org.pdtextensions.parentProjectNature"
                            value="org.eclipse.php.core.PHPNature">
                      </test>
                   </iterate>
                </with>
                <not>
                   <with
                         variable="selection">
                      <iterate
                            ifEmpty="false"
                            operator="and">
                         <test
                               forcePluginActivation="true"
                               property="org.pdtextensions.parentProjectNature"
                               value="com.dubture.symfony.core.symfonyNature">
                         </test>
                      </iterate>
                   </with>
                </not>
             </and>
          </visibleWhen>
       </command>
       <command
             commandId="com.dubture.symfony.ui.command.removeSymfonySupport"
             label="Remove Symfony support"
             style="push">
          <visibleWhen
                checkEnabled="false">
             <with
                   variable="selection">
                <iterate
                      ifEmpty="false"
                      operator="and">
                   <test
                         forcePluginActivation="true"
                         property="org.pdtextensions.parentProjectNature"
                         value="com.dubture.symfony.core.symfonyNature">
                   </test>
                </iterate>
             </with>
          </visibleWhen>
       </command>
    </menuContribution>
 </extension>
 <extension
       point="org.eclipse.ui.bindings">
    <key
          commandId="com.dubture.symfony.ui.command.insertRoute"
          contextId="org.eclipse.ui.textEditorScope"
          schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
          sequence="M1+R">
    </key>
    <key
          commandId="com.dubture.symfony.ui.command.insertService"
          contextId="org.eclipse.ui.textEditorScope"
          schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
          sequence="M1+M2+S">
    </key>
   <key
          commandId="com.dubture.symfony.ui.command.insertParameter"
          contextId="org.eclipse.ui.textEditorScope"
          schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
          sequence="M1+M2+P">
    </key>
 </extension>
 <extension
       point="org.eclipse.ui.ide.markerResolution">
    <markerResolutionGenerator
          class="com.dubture.symfony.ui.quickassist.XMLQuickassistProcessor"
          markerType="com.dubture.symfony.core.serviceMarker">
