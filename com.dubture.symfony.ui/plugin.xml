		<wizard
        	category="com.dubture.symfony.project.ui"
        	class="com.dubture.symfony.ui.wizards.controller.ControllerCreationWizard"
        	icon="ico/full/obj16/add_php_file.gif"
        	id="com.dubture.symfony.ui.wizards.ControllerCreationWizard"
        	name="%wizard.new.controller"
        	project="false">
        </wizard>
        -->
	</extension>
 <extension
       point="org.eclipse.ui.propertyPages">
    <page
          category="com.dubture.symfony.ui.projectPropertyPage"
          class="com.dubture.symfony.ui.preferences.ServicesPreferencePage"
          id="com.dubture.symfony.ui.servicePreferencePage"
          name="%servicesPreferencePage">
         <enabledWhen>
            <adapt
                  type="org.eclipse.core.resources.IProject">
               <instanceof
                     value="org.eclipse.core.resources.IProject">
               </instanceof>
               <test
                     property="org.eclipse.core.resources.projectNature"
                     value="com.dubture.symfony.core.symfonyNature">
               </test>
            </adapt>
        </enabledWhen>
    </page>
    <page
          category="com.dubture.symfony.ui.projectPropertyPage"
          class="com.dubture.symfony.ui.preferences.ConsolePreferencePage"
          id="com.dubture.symfony.ui.consolePreferences"
          name="Console">
       <enabledWhen>
          <adapt
                type="org.eclipse.core.resources.IProject">
             <instanceof
                   value="org.eclipse.core.resources.IProject">
             </instanceof>
             <test
                   property="org.eclipse.core.resources.projectNature"
                   value="com.dubture.symfony.core.symfonyNature">
             </test>
          </adapt>
       </enabledWhen>
    </page>
    <page
          class="com.dubture.symfony.ui.preferences.SymfonyProjectPropertyPage"
          id="com.dubture.symfony.ui.projectPropertyPage"
          name="Symfony">
       <enabledWhen>
          <adapt
                type="org.eclipse.core.resources.IProject">
             <instanceof
                   value="org.eclipse.core.resources.IProject">
             </instanceof>
             <test
                   property="org.eclipse.core.resources.projectNature"
                   value="com.dubture.symfony.core.symfonyNature">
             </test>
          </adapt>
       </enabledWhen>
    </page>
 </extension>
 <extension
       point="org.eclipse.core.runtime.preferences">
    <initializer
          class="com.dubture.symfony.ui.preferences.PreferenceInitializer">
    </initializer>
 </extension>
 <extension
       point="org.eclipse.ui.ide.projectNatureImages">
    <image
          icon="ico/full/obj16/symfony_icon.gif"
          id="com.dubture.symfony.ui.symfonyNatureImage"
          natureId="com.dubture.symfony.core.symfonyNature">
    </image>
 </extension>
 <extension
       point="org.eclipse.ui.commands">
  <command
        categoryId="org.eclipse.ui.category.dialogs"
        description="Insert a routename at the current cursor position"
        id="com.dubture.symfony.ui.command.insertRoute"
        name="Insert Route">
  </command>
  <command
        categoryId="org.eclipse.ui.category.dialogs"
        description="Insert a service ID at the current cursor position"
        id="com.dubture.symfony.ui.command.insertService"
        name="Insert Service">
  </command>
  <command
        categoryId="org.eclipse.ui.category.dialogs"
        description="Insert a container parameter at the current cursor position"
        id="com.dubture.symfony.ui.command.insertParameter"
        name="Insert Parameter">
  </command>
  <command
        defaultHandler="com.dubture.symfony.ui.handler.AddSymfonySupportHandler"
        id="com.dubture.symfony.ui.command.addSymfonySupport"
        name="Add Symfony support">
  </command>
  <command
        defaultHandler="com.dubture.symfony.ui.handler.RemoveSymfonySupportHandler"
        id="com.dubture.symfony.ui.command.removeSymfonySupport"
        name="Remove Symfony support">
  </command>
  

 </extension>
 
